<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonActivity">

    <LinearLayout
        android:id="@+id/personActivityPersonDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/personActivityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Sheila" />

        <TextView
            android:id="@+id/personActivityGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Female" />

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:divider="@android:color/black"
        android:dividerHeight="0.5dp"
        android:indicatorLeft="?android:attr/expandableListPreferredChildIndicatorLeft"
        android:layout_below="@id/personActivityPersonDetails"/>

</RelativeLayout>